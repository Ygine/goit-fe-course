{
  "name": "mod-11",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "server": "browser-sync src -w ",
    "sass": "node-sass src/scss/index.scss src/css/styles.css",
    "sass:watch": "node-sass src/scss/index.scss src/css/styles.css --watch",
    "dev": "npm run sass && npm run sass:watch & npm run server",
    "lint": "stylelint ./css/*.css",
    "css": "postcss ./css/*.css --use autoprefixer --use cssnano -d build/css",
    "clean": "rimraf build && mkdir build",
    "html": "html-minifier --input-dir src --output-dir build --collapse-whitespace --file-ext html",
    "images": "imagemin ./img/* -o=build/img",
    "build": "npm run clean && npm run images && npm run sass && npm run css && npm run html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ygine/goit-fe-course/tree/master/module-10"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^9.1.5",
    "browser-sync": "^2.26.0",
    "cpx": "^1.5.0",
    "cssnano": "^4.1.4",
    "html-minifier": "^3.5.21",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.9.4",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.6.0",
    "stylelint-config-sass-guidelines": "^5.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.3.2"
  }
}
